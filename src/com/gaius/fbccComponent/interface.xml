<bundle name="mybundle" description="my Test bundle">
    <!-- Synchronous Interface Chain Setup -->
    <interface>interface1</interface>
    <interface>interface2</interface>
    <interface>interface3</interface>
    
    <!-- Asynchronous Interface Chain Setup -->
    <interface asynchronous="true">interface1</interface>
    <interface asynchronous="true">interface2</interface>
</bundle>

<interface name="myInterface" onerror="alternate_interface" description="Description of the interface."> <!-- onerror Alternate interface to call if this interface throws error -->
     <component name="component1">
        <component name="component2">
           <component name="component3">
             <component name="component4" failsafe="true"/> <!--failsafe attribute (false, by default) to silently consume any exception raised by the component or a nested one if set to true -->
           </component>
           <transaction> <!-- The transaction tag defines a database transaction. If component6 raises exception the changes made by component5 is rolled back-->
               <component name="component5">
                   <component name="component6"/>
               </component>
           </transaction>
        </component>
      </component>
</interface>

<component name="MyTestComponent" failsafe="true"> 
        <description>This describes the components</description>
        <classname>com.gaius.fbccComponent.MyComponent</classname>
        <properties>
                <property name="propertyName" description="propertyDescrition"> value1</property>
                <property name="propertyName" description="propertyDescrition"> value1</property>
        </properties>
        <publish>
                <property name="product_code" description="description"/>
        </publish>
        <prerequisite>
                <property name="" description=""/>
        </prerequisite>
</component>
